<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.ChangePasswordActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_dp20"
            android:layout_marginTop="@dimen/base_dp30"
            android:layout_marginEnd="@dimen/base_dp20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/base_dp16"
                android:paddingBottom="@dimen/base_dp16"
                android:text="新密码："
                android:textColor="#ff3a3a3a"
                android:textSize="15sp" />

            <com.trinidad.beansanconstruction.weight.ClearEditText
                android:id="@+id/mFirstPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入新的密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingStart="@dimen/base_dp20"
                android:textColor="#ff3a3a3a"
                android:textColorHint="#ffb4b4b4"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#B8B8B8"
            app:layout_constraintTop_toBottomOf="@+id/mFeedbackTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_dp20"
            android:layout_marginEnd="@dimen/base_dp20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/base_dp16"
                android:paddingBottom="@dimen/base_dp16"
                android:text="密码确认："
                android:textColor="#ff3a3a3a"
                android:textSize="15sp" />

            <com.trinidad.beansanconstruction.weight.ClearEditText
                android:id="@+id/mSecondPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingStart="@dimen/base_dp5"
                android:textColor="#ff3a3a3a"
                android:textColorHint="#ffb4b4b4"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#B8B8B8"
            app:layout_constraintTop_toBottomOf="@+id/mFeedbackTextView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp16"
            android:paddingStart="@dimen/base_dp20"
            android:paddingEnd="@dimen/base_dp20"
            android:text="密码必须是8-16位英文字母、数字、字符组合 （不能是纯数字）"
            android:textColor="#ffb4b4b4"
            android:textSize="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mSubmitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#19CC7E"
            android:gravity="center"
            android:paddingTop="@dimen/base_dp15"
            android:paddingBottom="@dimen/base_dp15"
            android:text="保存修改"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
</layout>