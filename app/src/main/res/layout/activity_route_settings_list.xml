<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.RouteSettingsListActivity">

        <com.moufans.lib_base.base.recyclerview.MyRecyclerView
            android:id="@+id/mRouteSettingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mAddedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#19CC7E"
            android:gravity="center"
            android:paddingTop="@dimen/base_dp15"
            android:paddingBottom="@dimen/base_dp15"
            android:text="新增"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
</layout>