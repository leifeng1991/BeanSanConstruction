<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.SelectRoleActivity">

        <TextView
            android:id="@+id/mTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base_dp93"
            android:text="请选择你的角色"
            android:textColor="#ff4a4a4a"
            android:textSize="21sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRoleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/base_dp18"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/mTitleTextView" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/mNextStepRTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dp37"
            android:layout_marginRight="@dimen/base_dp37"
            android:layout_marginBottom="@dimen/base_dp15"
            android:gravity="center"
            android:paddingTop="@dimen/base_dp13"
            android:paddingBottom="@dimen/base_dp13"
            android:text="下一步"
            android:textSize="19sp"
            app:background_normal="#19CC7E "
            app:corner_radius="@dimen/base_dp6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mSelectRoleRadioGroup"
            app:text_color_normal="@color/white" />
    </LinearLayout>
</layout>