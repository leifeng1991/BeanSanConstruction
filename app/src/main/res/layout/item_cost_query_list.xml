<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.ruffian.library.widget.RConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dp15"
        android:layout_marginTop="@dimen/base_dp10"
        android:layout_marginEnd="@dimen/base_dp15"
        android:layout_marginBottom="@dimen/base_dp10"
        android:paddingTop="@dimen/base_dp20"
        android:paddingBottom="@dimen/base_dp20"
        app:background_normal="@color/white"
        app:corner_radius="@dimen/base_dp4">

        <TextView
            android:id="@+id/mProjectTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="项目：龙翔产业园"
            android:textColor="#ff9b9b9b"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mCostTypesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp10"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="费用类型：洒水车临时工"
            android:textColor="#ff9b9b9b"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/mProjectTextView" />

        <TextView
            android:id="@+id/mConstructionUnitCostTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp10"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="费用单价：¥200 元/每次"
            android:textColor="#ff9b9b9b"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/mCostTypesTextView" />

        <TextView
            android:id="@+id/mQuantityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp10"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="数量：100"
            android:textColor="#ff9b9b9b"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/mConstructionUnitCostTextView" />

        <TextView
            android:id="@+id/mCostOfSubtotalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp10"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="费用小计：¥1000"
            android:textColor="#ff9b9b9b"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/mQuantityTextView" />

        <View
            android:id="@+id/mLineView_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/base_dp16"
            android:background="#1A000000"
            app:layout_constraintTop_toBottomOf="@+id/mCostOfSubtotalTextView" />

        <TextView
            android:id="@+id/mCreateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp10"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="创建日期：2022-10-01"
            android:textColor="#ff9b9b9b"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/mCheckRTextView"
            app:layout_constraintTop_toTopOf="@+id/mCheckRTextView"
            app:layout_constraintTop_toBottomOf="@+id/mLineView_1" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/mCheckRTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dp15"
            android:layout_marginEnd="@dimen/base_dp17"
            android:layout_marginBottom="@dimen/base_dp1"
            android:paddingLeft="@dimen/base_dp27"
            android:paddingTop="@dimen/base_dp3"
            android:paddingRight="@dimen/base_dp27"
            android:paddingBottom="@dimen/base_dp3"
            android:text="查看"
            android:textColor="#ff19cc7e"
            android:textSize="15sp"
            app:background_normal="@color/white"
            app:border_color_normal="#ff19cc7e"
            app:border_width_normal="@dimen/base_dp1"
            app:corner_radius="@dimen/base_dp3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mLineView_1" />
    </com.ruffian.library.widget.RConstraintLayout>
</layout>