<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dp15"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mAddressNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="乌托邦音乐城（柳州城中区）"
            android:textColor="#d9000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mDistanceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/base_dp15"
            android:paddingEnd="@dimen/base_dp15"
            android:text="城中区"
            android:textColor="#80000000"
            android:textSize="13sp" />

    </LinearLayout>
</layout>
